<Window x:Class="GroupProject.Application_2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject"
        mc:Ignorable="d"
        Title="Диеты" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Верхняя часть с ListBox и кнопкой -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5">
            <ListBox x:Name="DietListBox" Width="200" Margin="0,0,10,0">
                <ListBoxItem Content="Кето" />
                <ListBoxItem Content="Палео" />
                <ListBoxItem Content="Вегетарианская" />
            </ListBox>
            <Button Content="Выбрать" Width="100" Click="SelectButton_Click"/>
        </StackPanel>

        <!-- Большое окно для отображения диалога -->
        <TextBox x:Name="DialogTextBox" Grid.Row="1" Margin="5" IsReadOnly="True" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap" />

        <!-- Нижняя часть с TextBox для отправки сообщений и кнопкой -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="5">
            <TextBox x:Name="MessageTextBox" Width="400" Height="50" KeyDown="MessageTextBox_KeyDown" />
            <Button Content="Отправить" Width="100" Click="SendButton_Click" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
