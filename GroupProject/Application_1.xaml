<Window x:Class="GroupProject.Application_1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Помощник для вашей диеты" Height="300" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Левая половина с объектом -->
        <Border Grid.Column="0" Background="LightGray" Margin="5">
            <TextBlock Text="Информация" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"/>
        </Border>

        <!-- Правая половина с TextBox и кнопкой -->
        <StackPanel Grid.Column="1" Margin="5,5,5,142">
            <TextBox x:Name="ReadOnlyTextBox"  Text="Введите продукт или блюдо" Margin="0,0,0,10"/>
            <TextBox x:Name="InputTextBox" IsReadOnly="True" Text="Калорийность на 100 грамм" Margin="0,0,0,10"/>
            <Button Content="" Click="Button_Click"/>
        </StackPanel>
        <Button Grid.Column="1" Content="Диеты" HorizontalAlignment="Left" Height="41" Margin="5,206,0,0" VerticalAlignment="Top" Width="280" Click="Button_Click_1"/>
    </Grid>
</Window>

